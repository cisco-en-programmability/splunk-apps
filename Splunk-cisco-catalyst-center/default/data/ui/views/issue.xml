<form version="1.1">
  <label>Issues</label>
  <description>This dashboard provides an overview of issues detected in the Cisco Catalyst network.</description>
  <fieldset submitButton="true" autoRun="true">
    <input type="time" token="timeRangePicker9" searchWhenChanged="true">
      <label>Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="ciscocatalysthostDropdown" searchWhenChanged="true">
      <label>Cisco Catalyst Center Host</label>
      <fieldForLabel>cisco_catalyst_host</fieldForLabel>
      <fieldForValue>cisco_catalyst_host</fieldForValue>
      <search>
        <query>sourcetype="cisco:catalyst:issue" | dedup cisco_catalyst_host keepevents=false | table cisco_catalyst_host</query>
        <earliest>$timeRangePicker9.earliest$</earliest>
        <latest>now</latest>
      </search>
      <selectFirstChoice>true</selectFirstChoice>
    </input>
    <input type="dropdown" token="statusDropdown" searchWhenChanged="true">
      <label>Issue Status</label>
      <choice value="*">All</choice>
      <default>active</default>
      <initialValue>*</initialValue>
      <fieldForLabel>IssueStatus</fieldForLabel>
      <fieldForValue>IssueStatus</fieldForValue>
      <search>
        <query>sourcetype="cisco:catalyst:issue" cisco_catalyst_host="$ciscocatalysthostDropdown$" | dedup IssueStatus keepevents=false | table IssueStatus</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
    </input>
    <input type="text" token="siteFilter" searchWhenChanged="true">
      <label>Site</label>
      <default>Global</default>
    </input>
  </fieldset>
