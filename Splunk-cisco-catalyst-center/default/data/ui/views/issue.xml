  <row>
    <panel>
      <title>Table of Top 10 Issues</title>
      <table>
        <title>Site: $siteFilter$</title>
        <search>
          <query>
            sourcetype="cisco:catalyst:issue" cisco_catalyst_host="$ciscocatalysthostDropdown$" IssueStatus="$statusDropdown$" IssueStatus="$statusDropdown$"
            | dedup IssueID keepevents=false
            | where "$siteFilter$"="" OR lower(SiteNameHierarchy) LIKE lower("%$siteFilter$%")
            | eventstats sum(IssueCount) as IssueCountSpecific, list(IssueName) as IssueNames, list(IssueStatus) as IssueStatuses, list(DeviceName) as DeviceNames, list(DeviceIpAddress) as DeviceIpAddresses, list(DeviceMACAddress) as DeviceMACAddresses, list(DeviceFamily) as DeviceFamilies, list(DeviceRole) as DeviceRoles by IssueSpecificName
            | dedup IssueSpecificName keepevents=false
            | eval IssueLastOccurredTime=strftime(IssueSpecificTimestamp/1000, "%Y-%m-%d %H:%M:%S")
            | sort limit=10 +str(IssueSpecificPriority), -num(IssueCountSpecific), +str(IssueSpecificName)
            | eval ciscocatalysthostip=replace("$ciscocatalysthostDropdown$", "https://", "")
            | eval URL="https://"+ciscocatalysthostip+"/dna/assurance/issueDetails?issueId="+IssueID
            | rename IssueSpecificName as "Issue Type", IssueSpecificPriority as "Priority", IssueCountSpecific as "Count", IssueSpecificSeverity as "Severity", IssueNames as "Names", IssueLastOccurredTime as "Last Occurred", IssueStatuses as "Status", DeviceNames as "Device Name", DeviceIpAddresses as "IP Address", DeviceMACAddresses as "MAC Address", DeviceFamilies as "Family", DeviceRoles as "Role", SiteNameHierarchy as "Site"
            | table "Issue Type", "Priority", "Count", "Severity", "Names", "Last Occurred", "Status", "Device Name", "IP Address", "MAC Address", "Family", "Role", IssueID, ciscocatalysthostip, URL, Site</query>
          <earliest>$timeRangePicker9.earliest$</earliest>
          <latest>$timeRangePicker9.latest$</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="refresh.display">progressbar</option>
        <option name="drilldown">cell</option>
        <fields>["Issue Type","Priority","Count","Severity","Last Occurred","Names","Status","Device Name","IP Address","MAC Address","Family","Role","Site"]</fields>
        <drilldown>
          <condition field="Names">
            <link target="_blank">$row.URL|n$</link>
          </condition>
          <condition field="*"></condition>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Table of Top 10 Impacted Devices</title>
      <table>
        <title>Site: $siteFilter$</title>
        <search>
          <query>
            sourcetype="cisco:catalyst:issue" cisco_catalyst_host="$ciscocatalysthostDropdown$" IssueStatus="$statusDropdown$"
            | dedup IssueID keepevents=false
            | where "$siteFilter$"="" OR lower(SiteNameHierarchy) LIKE lower("%$siteFilter$%")
            | eventstats sum(IssueCount) as IssueCountDevice, dc(IssueID) as IssueIDAmount, list(IssueSpecificName) as IssueSpecificNames, list(IssueSpecificPriority) as IssueSpecificPriorities, list(IssueSpecificSeverity) as IssueSpecificSeverities by DeviceID
            | dedup DeviceID keepevents=false
            | sort limit=10 +str(IssueSpecificPriority), -num(IssueCountDevice), +str(DeviceName)
            | eval ciscocatalysthostip=replace("$ciscocatalysthostDropdown$", "https://", "")
            | eval URL="https://"+ciscocatalysthostip+"/dna/assurance/device/details?emptyDevice=false&amp;id="+DeviceID
            | eval URL2="https://"+ciscocatalysthostip+"/dna/assurance/client/details?macAddress="+DeviceMACAddress
            | rename DeviceName as "Device Name", IssueCountDevice as "Count", DeviceIpAddress as "IP Address", DeviceMACAddress as "MAC Address", DeviceFamily as "Family", DeviceRole as "Role", IssueIDAmount as "Issue Count", IssueSpecificNames as "Issue Name", IssueSpecificPriorities as "Priority", IssueSpecificSeverities as "Severity", SiteNameHierarchy as "Site"
            | table "Device Name", "Count", "IP Address", "MAC Address", "Family", "Role", "Issue Count", "Issue Name", "Priority", "Severity", DeviceID, ciscocatalysthostip, URL, Site, URL2</query>
          <earliest>$timeRangePicker9.earliest$</earliest>
          <latest>$timeRangePicker9.latest$</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
        <option name="drilldown">cell</option>
        <fields>"Device Name", "Count", "IP Address", "MAC Address", "Family", "Role", "Issue Count", "Issue Name", "Priority", "Severity", "Site"</fields>
        <drilldown>
          <condition field="Device Name">
            <link target="_blank">$row.URL|n$</link>
          </condition>
          <condition field="MAC Address">
            <link target="_blank">$row.URL2|n$</link>
          </condition>
          <condition field="*"></condition>
        </drilldown>
      </table>
    </panel>
  </row>
