  <row>
    <panel>
      <title>Security Advisories with devices</title>
      <input type="dropdown" token="ipAddressDropdown" searchWhenChanged="true">
        <label>IP Address</label>
        <choice value="*">All</choice>
        <initialValue>*</initialValue>
        <fieldForLabel>IpAddress</fieldForLabel>
        <fieldForValue>IpAddress</fieldForValue>
        <search>
          <query>source="/opt/splunk/etc/apps/CiscoDNACenter/bin/security_advisories.py" host="splunk" index="cisco_dnac_index" sourcetype="_json" Summary="False" | dedup IpAddress keepevents=false | table IpAddress</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
      </input>
      <input type="dropdown" token="advisoryIDDropdown" searchWhenChanged="true">
        <label>Advisory ID</label>
        <choice value="*">All</choice>
        <initialValue>*</initialValue>
        <fieldForLabel>AdvisoryID</fieldForLabel>
        <fieldForValue>AdvisoryID</fieldForValue>
        <search>
          <query>source="/opt/splunk/etc/apps/CiscoDNACenter/bin/security_advisories.py" host="splunk" index="cisco_dnac_index" sourcetype="_json" Summary="False" | dedup AdvisoryID keepevents=false | table AdvisoryID</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
      </input>
      <table>
        <search>
          <query>source="/opt/splunk/etc/apps/CiscoDNACenter/bin/security_advisories.py" host="splunk" index="cisco_dnac_index" sourcetype="_json" Summary="False" IpAddress="$ipAddressDropdown$" AdvisoryID="$advisoryIDDropdown$" | dedup AdvisoryID keepevents=false | table AdvisoryID, AdvisoryCvesStr, AdvisoryDefaultDetectionType, AdvisoryDetectionType, AdvisoryPublicationUrl, AdvisorySir, IpAddress, DeviceName,  DeviceMACAddress, DeviceSerialNumber, DeviceFamily,  DevicePlatform,  DeviceSeries,  DeviceUptimeSeconds</query>
          <earliest>$timeRangePicker7.earliest$</earliest>
          <latest>$timeRangePicker7.latest$</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
