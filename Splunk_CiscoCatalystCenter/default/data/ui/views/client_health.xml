<form version="1.1">
  <label>Client Health</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="timeRangePicker2" searchWhenChanged="true">
      <label>Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="ciscocatalysthostDropdown" searchWhenChanged="true">
      <label>Cisco Catalyst Center Host</label>
      <fieldForLabel>cisco_catalyst_host</fieldForLabel>
      <fieldForValue>cisco_catalyst_host</fieldForValue>
      <search>
        <query>sourcetype="cisco:catalyst:clienthealth" | dedup cisco_catalyst_host keepevents=false | table cisco_catalyst_host</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
      <selectFirstChoice>true</selectFirstChoice>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>All Clients Health Score</title>
      <single>
        <search>
          <query>sourcetype="cisco:catalyst:clienthealth" cisco_catalyst_host="$ciscocatalysthostDropdown$" siteId="global" clientType="ALL" scoreType="ALL"
          | chart values(scoreValue) as t by _time
          | timechart avg(t) as scoreValue
          </query>
          <earliest>$timeRangePicker2.earliest$</earliest>
          <latest>$timeRangePicker2.latest$</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">none</option>
        <option name="drilldown">none</option>
        <option name="numberPrecision">0</option>
        <option name="rangeColors">["0xdc4e41","0xdc4e41","0xf1813f","0xf8be34","0x53a051","0x53a051"]</option>
        <option name="rangeValues">[0,25,50,75,100]</option>
        <option name="refresh.display">progressbar</option>
        <option name="showSparkline">1</option>
        <option name="showTrendIndicator">1</option>
        <option name="trellis.enabled">0</option>
        <option name="trellis.scales.shared">1</option>
        <option name="trellis.size">medium</option>
        <option name="trendColorInterpretation">standard</option>
        <option name="trendDisplayMode">absolute</option>
        <option name="unitPosition">after</option>
        <option name="useColors">1</option>
        <option name="useThousandSeparators">1</option>
      </single>
    </panel>
    <panel>
      <title>Wired Clients Health Score</title>
