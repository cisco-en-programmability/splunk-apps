<form version="1.1">
  <label>Cisco DNA Center Sensor Device</label>
  <fieldset submitButton="false" autoRun="true">
    <input type="time" token="timeRangePicker8" searchWhenChanged="true">
      <label>Time Range</label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
    <input type="dropdown" token="ciscodnachostDropdown" searchWhenChanged="true">
      <label>Cisco DNA Center Host</label>
      <fieldForLabel>cisco_dnac_host</fieldForLabel>
      <fieldForValue>cisco_dnac_host</fieldForValue>
      <search>
        <query>sourcetype="cisco:dnac:sensordevice" | dedup cisco_dnac_host keepevents=false | table cisco_dnac_host</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
      <selectFirstChoice>true</selectFirstChoice>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Sensor Devices Table</title>
      <table>
        <search>
          <query>sourcetype="cisco:dnac:sensordevice" cisco_dnac_host="$ciscodnachostDropdown$"
| dedup name, ipAddress, serialNumber, location keepevents=false
| table name, ipAddress, serialNumber, location, type, status, version, backhaulType, ethernetMacAddress, radioMacAddress, lastSeen</query>
          <earliest>$timeRangePicker8.earliest$</earliest>
          <latest>$timeRangePicker8.latest$</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>10m</refresh>
          <refreshType>delay</refreshType>
        </search>
        <option name="count">20</option>
        <option name="dataOverlayMode">none</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="refresh.display">progressbar</option>
        <option name="rowNumbers">false</option>
        <option name="totalsRow">false</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <title>Sensor Devices by Status</title>
