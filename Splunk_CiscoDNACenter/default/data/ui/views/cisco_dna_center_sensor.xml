| dedup ipAddress keepevents=false
| chart dc(ipAddress) as amount by status
| eventstats sum(amount) as Total
| eval perc=round((amount/Total)*100, 2)
| eval status=status." (".perc."%)"
| table status amount</query>
          <earliest>$timeRangePicker8.earliest$</earliest>
          <latest>$timeRangePicker8.latest$</latest>
          <sampleRatio>1</sampleRatio>
          <refresh>10m</refresh>
